			DockPanel.Dock="Left"
			Source="avares://PicView/Assets/PicView/icon__Q6k_icon.ico"
			Width="25"
			Height="25"
			Margin="10,1,10,1">
		</Image>
		<Rectangle
			Width="1"
			Height="30"
			DockPanel.Dock="Left"
			Fill="{StaticResource BorderBrush}" />

